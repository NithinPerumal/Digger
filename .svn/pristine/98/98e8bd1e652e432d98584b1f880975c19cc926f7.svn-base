	     }
	     public void updatePosition(){
	           this.x+=this.x_Veloctiy;
	           this.y+=this.y_Velocity;
	          
	     }
	     public void setPosition(int x,int y){
	           this.x=x;
	           this.y=y;
	     }
	}
