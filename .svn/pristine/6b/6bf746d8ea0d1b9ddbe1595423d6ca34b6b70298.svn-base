	private int Score = 0;
	
	Runnable Hero = new Runnable() {
		@Override
		public void run() {
			try {
				while (true) {
					Thread.sleep(UPDATE_INTERVAL_MS);
					HeroTimePassed();
					MonsterTimePassed();
					Monster1TimePassed();
					EmearaldTimepassed();
					WeaponTimePassed();
					kill();

